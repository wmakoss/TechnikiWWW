doctype html
html(lang='pl')
    head
        meta(charset='utf-8')
        title Ice Games
        link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
        link(rel='stylesheet' href='stylesheets/style.css')
        script(type='text/javascript' src='javascripts/script.js')
    body(id='body')
        #upper
            a(href='/')
                #logo
                    span#logospan Ice Games
            if userid > 0
                span(style="margin-left:auto;margin-right: 30px;") Zalogowany jako #{userlogin}
                a.upper-button(href='/mygames')
                    span#login-button.upper-button Zakupione gry
                a.upper-button(href='/logout')
                    span#login-button.upper-button Wyloguj się
            else
                a.upper-button(style='margin-left:auto;' href='/registration')
                    span#login-button.upper-button Zarejestruj się
                a.upper-button(href='/login')
                    span#login-button.upper-button Zaloguj się
        block content
